<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.content {
			padding: 10px 0px;
		}
		
		.message {
			padding-top: 3px;
		}
		
		.buttonBar {
			margin-top: 10px;
		}
		
		.button {
			margin: 0px 3px;
			float: right;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.content}">
		<g:Label
			ui:field="message"
			text="Alert!"
			addStyleNames="{style.message}" />
		<g:FlowPanel styleName="{style.buttonBar}">
			<g:Button
				ui:field="okButton"
				text="OK"
				addStyleNames="{style.button}"
				width="75px" />
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder>