<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.main {
			padding-top: 10%;
		}
		
		.panel {
			margin-left: auto;
			margin-right: auto;
			max-width: 300px;
			padding: 15px;
			border: 1px #ff7f00 solid;
			border-radius: 4px;
			background-color: rgba(255, 255, 255, 0.7);
		}
		
		.message {
			
		}
		
		.buttonBar {
			margin-top: 20px;
		}
		
		.button {
			margin: 0px 3px;
			float: right;
		}
	</ui:style>
	<g:FlowPanel
		height="100%"
		styleName="{style.main}">
		<g:SimplePanel styleName="{style.panel}">
			<g:FlowPanel>
				<g:Label
					ui:field="message"
					text="Message message messgae message"
					addStyleNames="{style.message}" />
				<g:FlowPanel
					styleName="{style.buttonBar}"
					height="27px">
					<g:Button
						ui:field="okButton"
						addStyleNames="{style.button}"
						width="75px"
						text="OK" />
				</g:FlowPanel>
			</g:FlowPanel>
		</g:SimplePanel>
	</g:FlowPanel>
</ui:UiBinder>